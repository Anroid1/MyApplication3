<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ShouyeFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#449e86"
        >
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="季果蔬"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shouyeL"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_find"
            android:layout_weight="1"
            android:background="@drawable/translucent"
            android:gravity="center"
            android:hint="请输入需要搜索的商品名"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bu_find"
            android:text="搜索"></TextView>

    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/gv_home"
        android:layout_width="410dp"
        android:layout_height="175dp"
        android:src="@drawable/xiyou"
        android:background="@color/white"
        android:layout_below="@+id/ll1"></ImageView>

    <GridView
        android:id="@+id/gv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:layout_below="@+id/gv_home"
        android:verticalSpacing="10dp"></GridView>

</LinearLayout>