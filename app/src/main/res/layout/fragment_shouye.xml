    <GridView
        android:id="@+id/gv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:layout_below="@+id/gv_home"
        android:verticalSpacing="10dp"></GridView>

</LinearLayout>