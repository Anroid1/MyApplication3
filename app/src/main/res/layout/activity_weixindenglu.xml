<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WeixindengluActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/yuanlogo" />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="季果蔬"
        android:textSize="24dp" />
    <ImageView
        android:id="@+id/weixindenglu"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@id/text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/weixindenglu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fxk"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@+id/weixindenglu"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/fxk"></ImageView>

        <ImageView
            android:id="@+id/text1"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/fxk"
            android:src="@drawable/text"></ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fxk"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:text="----切换其他方式登录----"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp">

        <ImageView
            android:id="@+id/tu1"
            android:layout_width="75dp"
            android:layout_height="71dp"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/qq1"></ImageView>

        <ImageView
            android:id="@+id/tu2"
            android:layout_width="75dp"
            android:layout_height="71dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@id/tu1"
            android:src="@drawable/mimadenglu"></ImageView>

    </LinearLayout>
</LinearLayout>