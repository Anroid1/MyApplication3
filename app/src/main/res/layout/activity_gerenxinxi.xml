<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wode.GerenxinxiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gl0"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/adI1"
            android:src="@drawable/button2"
            ></ImageView>
        <TextView
            android:id="@+id/gt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="个人信息"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/gl1"
        android:layout_below="@+id/gl0"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/gt2"
            android:text="修改头像"
            android:textColor="#101010"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            ></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/gI1"
            android:layout_gravity="center"
            android:layout_marginLeft="170dp"
            android:src="@drawable/touxiang"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:id="@+id/gI2"
            android:layout_gravity="center"
            android:src="@drawable/button1"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gl2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/gl1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gt3"
            android:layout_marginLeft="20dp"
            android:textColor="#101010"
            android:text="昵称">
        </TextView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CECECE"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gv1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/gl2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gl3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/gv1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gt4"
            android:layout_marginLeft="20dp"
            android:textColor="#101010"
            android:text="性别">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CECECE"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gv2"
        android:layout_below="@+id/gl3"
        />

    <LinearLayout
        android:id="@+id/gl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gv2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/gt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="手机号码"
            android:textColor="#101010"></TextView>

        <EditText
            android:id="@+id/phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CECECE"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gv3"
        android:layout_below="@+id/gl4"
        />


</RelativeLayout>