<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ZhuceActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="90dp"
        android:text="注册"
        android:textSize="28dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/sjh"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bu_zhuce"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:hint="请输入手机号" />


    <EditText
        android:id="@+id/mm"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sjh"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:hint="密码" />

    <ImageView
        android:id="@+id/bu_zhuce"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@id/mm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/zhuce" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fxk"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@+id/denglu"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/fxk"></ImageView>

        <ImageView
            android:id="@+id/text"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/fxk"
            android:src="@drawable/text"></ImageView>

    </LinearLayout>
</LinearLayout>